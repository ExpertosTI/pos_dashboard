<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PosDashboard">
        <div class="oh_dashboards">
        <div class="container-fluid o_pos_dashboard">
        <div class="row main-section" align="center">
            <div class="col-md-4 col-sm-6 pos_order_today oh-payslip"
                 t-on-click="pos_order_today">
                        <div class="oh-card" style="width: 288px;">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon"
                                         style="background:#5bcbd0"><i class="fa fa-shopping-bag"/></div>
                                    <div class="stat-content">
                                        <div class="stat-head">Pedidos de Hoy</div>
                                        <div class="stat_count"><t t-esc="state.today_sale"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            <div class="col-md-4 col-sm-6 pos_order oh-payslip"
                 t-on-click="pos_order">
                                    <div class="oh-card" style="width: 288px;">
                                        <div class="oh-card-body">
                                            <div class="stat-widget-one">
                                                <div class="stat-icon"
                                                     style="background:#645bd0"><i class="fa fa-shopping-bag"/></div>
                                                <div class="stat-content">
                                                    <div class="stat-head">Pedidos Totales</div>
                                                    <div class="stat_count"><t t-esc="state.total_order_count"/></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
            <div class="col-md-4 col-sm-6 pos_total_sales oh-payslip"
                 t-on-click="pos_order">
                                    <div class="oh-card" style="width: 350px;">
                                        <div class="oh-card-body">
                                            <div class="stat-widget-one">
                                                <div class="stat-icon"
                                                     style="background:#85d05b"><i class="fa fa-shopping-cart"/></div>
                                                <div class="stat-content">
                                                    <div class="stat-head">Ventas Totales</div>
                                                    <div class="stat_count"><t t-esc="state.total_sale"/></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
            <div class="col-md-4 col-sm-6 pos_session oh-payslip"
                 t-on-click="pos_session">
                                            <div class="oh-card"
                                                 style="width: 288px;">
                                                <div class="oh-card-body">
                                                    <div class="stat-widget-one">
                                                        <div class="stat-icon"
                                                             style="background:#d05bb8"><i class="fa fa-signal"/></div>
                                                        <div class="stat-content">
                                                            <div class="stat-head">Sesiones</div>
                                                            <div class="stat_count"><t t-esc="state.total_session"/></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                </div>

            <div class="col-md-4 col-sm-6 pos_refund_orders oh-payslip"
                 t-on-click="pos_refund_orders">
                                    <div class="oh-card" style="width: 288px;">
                                        <div class="oh-card-body">
                                            <div class="stat-widget-one">
                                                <div class="stat-icon"
                                                     style="background:#d0c35b"><i class="fa fa-minus-circle"/></div>
                                                <div class="stat-content">
                                                    <div class="stat-head">Total de Reembolsos</div>
                                                    <div class="stat_count"><t t-esc="state.total_refund_count"/></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
            <div class="col-md-4 col-sm-6 pos_refund_today_orders oh-payslip"
                 t-on-click="pos_refund_today_orders">
                                    <div class="oh-card" style="width: 350px;">
                                        <div class="oh-card-body">
                                            <div class="stat-widget-one">
                                                <div class="stat-icon"
                                                     style="background:#5b8ed0"><i class="fa fa-minus-circle"/></div>
                                                <div class="stat-content">
                                                    <div class="stat-head">Reembolsos de Hoy</div>
                                                    <div class="stat_count"><t t-esc="state.today_refund_total"/></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
            </div>
            </div>
        </div>
        <div class="row" style="margin: 20px 15px;">
            <div class="col-12">
                <div class="modern-filter-card">
                    <div class="filter-header">
                        <div class="filter-icon">
                            <i class="fa fa-sliders"/>
                        </div>
                        <h3 class="filter-title">Filtros de búsqueda</h3>
                    </div>
                    
                    <div class="filter-body">
                        <div class="filter-dates-row">
                            <div class="filter-date-group">
                                <label class="modern-label">
                                    <i class="fa fa-calendar-o"/> Fecha inicio
                                </label>
                                <input type="datetime-local"
                                       class="modern-input"
                                       t-att-value="state.filter_start"
                                       t-on-change="onChangeStart"/>
                            </div>
                            <div class="filter-date-group">
                                <label class="modern-label">
                                    <i class="fa fa-calendar-o"/> Fecha fin
                                </label>
                                <input type="datetime-local"
                                       class="modern-input"
                                       t-att-value="state.filter_end"
                                       t-on-change="onChangeEnd"/>
                            </div>
                        </div>
                        
                        <div class="filter-configs-section">
                            <label class="modern-label">
                                <i class="fa fa-cog"/> Configuraciones POS
                            </label>
                            <div class="modern-config-chips">
                                <t t-foreach="state.configs" t-as="config" t-key="config.id">
                                    <label class="modern-chip">
                                        <input type="checkbox"
                                               t-att-checked="state.selected_configs.includes(config.id) ? 'checked' : null"
                                               t-att-data-config-id="config.id"
                                               t-on-change="onToggleConfig"/>
                                        <span class="chip-text"><t t-esc="config.name"/></span>
                                        <span class="chip-checkmark">✓</span>
                                    </label>
                                </t>
                            </div>
                        </div>
                        
                        <button class="modern-apply-btn" t-on-click="applyFilters">
                            <i class="fa fa-filter"/> Aplicar filtros
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row metrics-section" style="margin: 20px 0;">
            <div class="col-12">
                <div class="summary-grid-four">
                    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <span>💰 VENTA TOTAL</span>
                        <strong t-esc="formatCurrency(state.detailed_report.summary.total_amount || 0)"/>
                    </div>
                    <div style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <span>📦 TOTAL DE ARTÍCULOS</span>
                        <strong t-esc="formatNumber(state.detailed_report.summary.total_quantity || 0, 0)"/>
                    </div>
                    <div style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                        <span>🏆 PRODUCTO MÁS VENDIDO</span>
                        <div class="top-product-content">
                            <t t-if="state.detailed_report.summary.top_product_image">
                                <img class="top-product-image" 
                                     t-att-src="'data:image/png;base64,' + state.detailed_report.summary.top_product_image"
                                     alt="Producto"/>
                            </t>
                            <t t-else="">
                                <div class="top-product-placeholder">📦</div>
                            </t>
                            <div class="top-product-info">
                                <strong t-esc="state.detailed_report.summary.top_product_name || 'N/A'"/>
                                <small style="display: block; margin-top: 5px; font-size: 0.8em;">
                                    <t t-esc="formatNumber(state.detailed_report.summary.top_product_qty || 0, 0)"/> unidades
                                </small>
                            </div>
                        </div>
                    </div>
                    <div style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                        <span>💵 GANANCIAS TOTALES</span>
                        <strong t-esc="formatCurrency(state.detailed_report.summary.total_profit || 0)"/>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
            <div class="row" style="margin:0px;">
                <div class="col-sm-4 col-lg-4  top_customer_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">
                            <h4 class="mb-0">
                            </h4>
                        </div>
                        <canvas class="top_customer" width="100" height="80"/>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-6  selling_product_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">
                            <h4 class="mb-0">
                            </h4>
                        </div>
                        <canvas class="top_selling_product" width="200"
                                height="120"/>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-6  selling_product_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">
                            <h4 class="mb-0">
                            </h4>
                        </div>
                        <canvas class="top_product_categories" width="200"
                                height="120"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="employee_dashboard_main">
        <div class="row main-section">
            <div class="col-md-4 col-lg-4">
                <div class="hr_notification" style="background: #fff;transition: transform 0.2s ease, box-shadow 0.2s ease;will-change: transform, box-shadow;box-shadow: 0 10px 40px 0 rgba(62,57,107,0.07), 0 2px 9px 0 rgba(62,57,107,0.06);
                height: 316px;overflow-y: auto;margin-bottom: 15px;">
                    <div class="hr_notification_head"
                         style="font-size: 17px;text-align: center;padding: 12px 0;color: #fff;font-weight: 300;background: #de6a5e;margin-bottom: 9px;">
                   Ventas por Vendedor
                    </div>
                    <div class="col-sm-12 col-lg-12" style="padding:0;">
                            <div class="text-color">
                                <div class="">
                                <div class="media">
                                <div class="media-body">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th rowspan="12">Nombre&#160;&#160;&#160;</th>
                                                <th rowspan="12">Pedidos</th>
                                                <th rowspan="12">Monto</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                             <t t-foreach="state.top_salesperson"
                                                t-as="salesperson"
                                                t-key="salesperson_index">
                                                <tr>
                                                    <td>
                                                        <h2 class="text-color display-6"
                                                            style="font-size: 15px;">
                                                            <t t-esc="salesperson[0]"/>
                                                        </h2>
                                                    </td>
                                                    <td>
                                                        <h2 class="text-color display-6"
                                                            style="font-size: 15px;">
                                                            <t t-esc="salesperson[2]"/>
                                                        </h2>
                                                    </td>
                                                    <td>
                                                        <h2 class="text-color display-6"
                                                            style="font-size: 15px;">
                                                            <t t-esc="salesperson[1]"/>
                                                        </h2>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div></div></div></div>
                            </div>
                    </div>
            </div>
            <div class="col-md-4 col-lg-4">
                    <div class="hr_notification" style="background: #fff;transition: transform 0.2s ease, box-shadow 0.2s ease;will-change: transform, box-shadow;box-shadow: 0 10px 40px 0 rgba(62,57,107,0.07), 0 2px 9px 0 rgba(62,57,107,0.06);
                    height: 316px;overflow-y: auto;margin-bottom: 15px;">
                        <div class="hr_notification_head"
                             style="font-size: 17px;text-align: center;padding: 12px 0;color: #fff;font-weight: 300;background:#de6a5e;;margin-bottom: 9px;">
                          Método de Pago
                        </div>
                        <div class="col-sm-12 col-lg-12" style="padding:0;">
                                <div class="text-color">
                                    <div class="">
                                    <div class="media">
                                    <div class="media-body">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th rowspan="12">Método de Pago&#160;&#160;&#160;</th>
                                                    <th rowspan="12">Monto</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                 <t t-foreach="state.payment_details"
                                                    t-as="payment_method"
                                                    t-key="payment_method_index">
                                                    <tr>
                                                        <td>
                                                            <h2 class="text-color display-6"
                                                                style="font-size: 15px;">
                                                                <t t-esc="payment_method[0]"/>
                                                            </h2>
                                                        </td>
                                                        <td>
                                                            <h2 class="text-color display-6"
                                                                style="font-size: 15px;">
                                                                <t t-esc="payment_method[1]"/>
                                                            </h2>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div></div></div></div>
                                </div>
                    </div>
            </div>
            <div class="col-md-4 col-lg-4">
                <div class="hr_notification" style="background: #fff;transition: transform 0.2s ease, box-shadow 0.2s ease;will-change: transform, box-shadow;box-shadow: 0 10px 40px 0 rgba(62,57,107,0.07), 0 2px 9px 0 rgba(62,57,107,0.06);
                height: 316px;overflow-y: auto;margin-bottom: 15px;">
                    <div class="hr_notification_head"
                         style="font-size: 17px;text-align: center;padding: 12px 0;color: #fff;font-weight: 300;background: #de6a5e;margin-bottom: 9px;">
                 Estado de Sesiones
                    </div>
                    <div class="col-sm-12 col-lg-12" style="padding:0;">
                            <div class="text-color">
                                <div class="">
                                <div class="media">
                                <div class="media-body">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th rowspan="12">Sesión&#160;&#160;&#160;</th>
                                                <th rowspan="12">Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                             <t t-foreach="state.sessions_list"
                                                t-as="session"
                                                t-key="session_index">
                                                <tr>
                                                    <td>
                                                        <h2 class="text-color display-6"
                                                            style="font-size: 15px;">
                                                            <t t-esc="session['session']"/>
                                                        </h2>
                                                    </td>
                                                    <td>
                                                        <h2 class="text-color display-6"
                                                            style="font-size: 15px;">
                                                            <t t-esc="session['status']"/>
                                                        </h2>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div></div></div></div>
                            </div>
                    </div>
            </div>
            </div>
         </div>
    </t>
</templates>
